<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/s_pen_model_autodetect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_pen_model_autodetect"
        app:layout_constraintBottom_toTopOf="@+id/s_pen_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/s_pen_list"
            android:layout_width="271dp"
            android:layout_height="27dp"
            android:entries="@array/s_pen_models"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:theme="@style/OneUI.ButtonStyleColored"
        android:textColor="@color/white"
        android:id="@+id/S_pen_connect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_pen_list" />

    <ProgressBar
        android:id="@+id/connect_progres"
        android:text="@string/connecting_s_pen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/S_pen_connect_btn"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>

